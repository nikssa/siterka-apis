generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  admin
  moderator
  parent
  sitter
}

enum Gender {
  male
  female
  other
}

enum ChildAge {
  NEWBORNS // 0-2 months
  INFANTS // 3-12 months
  TODDLERS // 1-2 years
  PRESCHOOLERS // 3-6 years
  SCHOOLERS // 7-12 years
  TEENS // 13-19 years
}

enum Education {
  Elementary
  High_School
  College
  Graduate
}

enum Language {
  SERBIAN
  ENGLISH
  GERMAN
  FRANCH
  ITALIAN
  SPANISH
  RUSSIAN
  OTHERS
}

enum EarningsRate {
  Hourly
  Daily
  Weekly
  Monthly
}

enum Currency {
  RSD
  USD
  EUR
}

enum TimeUnits {
  months
  years
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String   @unique @db.VarChar(255)
  password    String
  acceptTerms Boolean
  role        Role     @default(sitter)
  membership  Boolean  @default(false)
  active      Boolean  @default(false)
  deleted     Boolean  @default(false)
  createdAt   DateTime @default(now())
  post        Post?
  profile     Profile?
}

model Profile {
  id        Int      @id @default(autoincrement())
  firstName String
  lastName  String
  gender    Gender
  bio       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id])
  userId    Int      @unique
  photo     Photo?
}

model Post {
  id                 Int          @id @default(autoincrement())
  createdAt          DateTime     @default(now())
  updatedAt          DateTime     @updatedAt
  published          Boolean      @default(false)
  title              String       @db.VarChar(255)
  description        String       @db.VarChar(2000)
  email              String?
  phone              String?
  birthDate          DateTime? //date picker
  country            String //dropdown
  city               String //dropdown country sensitive
  address            String       @default("")
  availability       String       @default("")
  experience         Int // years or months
  experienceTimeUnit TimeUnits    @default(years)
  childAgeGroup      Json
  numberOfChildren   Int          @default(1)
  pets               Boolean
  specialNeeds       Boolean
  inOwnHouse         Boolean
  cleaning           Boolean
  cleaningChildOnly  Boolean
  shopping           Boolean
  cooking            Boolean
  cookingChildOnly   Boolean
  outWithChild       Boolean
  car                Boolean
  driversLicense     Boolean
  notSmoking         Boolean
  education          Education
  sitterCourse       Boolean
  firstAid           Boolean
  languages          Json
  otherLanguages     String
  earnings           Int
  earningsRate       EarningsRate
  currency           Currency     @default(RSD)
  author             User?        @relation(fields: [authorId], references: [id])
  authorId           Int          @unique
}

model Photo {
  id       Int      @id @default(autoincrement())
  url      String
  author   Profile? @relation(fields: [authorId], references: [userId])
  authorId Int      @unique
  // post     Post?  @relation(fields: [postId], references: [id])
  // postId   Int    @unique
}
